<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="345.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scrabble.BookScrabbleController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="title" text="Main Menu" textAlignment="CENTER"/>
    <Label fx:id="nickname" textAlignment="CENTER"/>

    <Button onAction="#onHostButtonClick" text="Host" textAlignment="CENTER"/>
    <Button onAction="#onJoinButtonClick" text="Join" textAlignment="CENTER"/>
    <Button onAction="#onSettingButtonClick" text="Settings" textAlignment="CENTER"/>
    <Button onAction="#onExitButtonClick" text="Exit" textAlignment="CENTER"/>

</VBox>
